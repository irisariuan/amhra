{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"declaration": true,
        "esModuleInterop": true,
        "strict": true
	},
	"include": ["/**/*.ts"],
	"exclude": ["/**/*.spec.ts", "node_modules/*", "dist", "/**/test/*"]
}
